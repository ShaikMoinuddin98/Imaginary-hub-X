                        <div>
                          <%= new Date(item.schedule).toLocaleDateString('en-US', { year: 'numeric' , month: 'long' ,
                            day: 'numeric' })%>
                        </div>
                        <%} else{%>
                          <div>
                            <%= new Date(item.publishedDate).toLocaleDateString('en-US', { year: 'numeric' ,
                              month: 'long' , day: 'numeric' })%>

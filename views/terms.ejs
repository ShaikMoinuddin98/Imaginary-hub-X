    <style>
        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        h2 {
            font-size: 2rem;
            margin-bottom: 1.5rem;
            color: #333;
        }

        h3 {
            font-size: 1.5rem;
            margin-bottom: 1rem;
            color: #555;
        }

        p,
        li {
            font-size: 1rem;
            line-height: 1.6;
            color: #666;
        }

        ul {
            list-style-type: disc;
            margin-left: 20px;
        }

        .button-dark {
            display: inline-block;
            padding: 10px 20px;
            background-color: #333;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .button-dark:hover {

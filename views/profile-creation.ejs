    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }
        .container {
            background-color: #ffffff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            max-width: 800px;
            margin: 40px auto;
        }
        .form-group {
            margin-bottom: 25px;
        }
        .form-control {
            border-radius: 5px;
            transition: border-color 0.3s ease;
        }
        .form-control:focus {
            border-color: #28a745;
            box-shadow: 0 0 5px rgba(40, 167, 69, 0.3);
        }
        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
            padding: 10px 20px;
            font-size: 16px;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }
        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
            transform: translateY(-2px);
        }
        .warning {
            color: #dc3545;
            font-size: 14px;
            margin-top: 5px;
            display: none;
        }
        .interest-buttons {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-top: 10px;
        }
        .interest-buttons button {
            padding: 10px 15px;
            border-radius: 20px;
            border: 1px solid #28a745;
            background-color: white;
            color: #28a745;
            cursor: pointer;
            transition: background-color 0.3s ease, color 0.3s ease;
        }
        .interest-buttons button.active {
            background-color: #28a745;
            color: white;
        }
        .profile-photo {
            display: block;
            width: 150px;
            height: 150px;
            object-fit: cover;
            border-radius: 50%;
            margin: 10px auto;
            border: 2px solid #28a745;
        }
        #photoPreview {
            display: none;
        }
        /* Accessibility */
        label {
            font-weight: 600;
            color: #2d3748;
        }
        input:focus, textarea:focus, button:focus {
            outline: 2px solid #28a745;
            outline-offset: 2px;
        }
        /* Responsive Design */
        @media (max-width: 576px) {
            .container {
                padding: 20px;
                margin: 20px auto;
            }
            .form-group {
                margin-bottom: 20px;
            }
            .btn-success {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <!-- Google Tag Manager -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-7QXPMYT3BK"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());
        gtag('config', 'G-7QXPMYT3BK');
    </script>

    <div class="container">
        <h2 class="mb-4 text-center">Create Your Writing Profile</h2>
        <form id="profileForm" action="/profile-creation" method="post" enctype="multipart/form-data">
            <!-- Profile Photo Upload -->
            <div class="form-group">
                <label for="profilePhoto">Profile Photo (Square Image)</label>
                <input name="profilePhoto" type="file" class="form-control-file" id="profilePhoto" accept="image/*" required aria-describedby="profilePhotoHelp">
                <small id="profilePhotoHelp" class="form-text text-muted">Please upload a square image (equal width and height).</small>
                <img id="photoPreview" class="profile-photo" src="<% if (data && data.img && data.img.data) { %>data:image/<%= data.img.contentType %>;base64,<%= data.img.data.toString('base64') %><% } else { %>#<% } %>" alt="Profile Photo Preview">
                <small id="photoWarning" class="warning">Please upload a square image.</small>
            </div>

            <!-- Username -->
            <div class="form-group">
                <label for="username">Username</label>
                <input name="username" type="text" class="form-control" id="username" placeholder="Enter your username" value="<% if (data && data.username) { %><%= data.username %><% } %>" required aria-describedby="usernameHelp">
                <small id="usernameHelp" class="form-text text-muted">Choose a unique username for your profile.</small>
            </div>

            <!-- LinkedIn Profile -->
            <div class="form-group">
                <label for="linkedin">LinkedIn Profile</label>
                <input name="linkedin" type="url" class="form-control" id="linkedin" value="<% if (data && data.socialmedia && data.socialmedia[0]) { %><%= data.socialmedia[0] %><% } %>" placeholder="https://linkedin.com/in/yourprofile" required aria-describedby="linkedinHelp">
                <small id="linkedinHelp" class="form-text text-muted">Enter your LinkedIn profile URL.</small>
                <small id="linkedinWarning" class="warning">Please enter a valid LinkedIn URL.</small>
            </div>

            <!-- X (Twitter) Profile -->
            <div class="form-group">
                <label for="xProfile">X (Twitter) Profile</label>
                <input name="xProfile" type="url" class="form-control" id="xProfile" value="<% if (data && data.socialmedia && data.socialmedia[1]) { %><%= data.socialmedia[1] %><% } %>" placeholder="https://twitter.com/yourprofile" required aria-describedby="xProfileHelp">
                <small id="xProfileHelp" class="form-text text-muted">Enter your X (Twitter) profile URL.</small>
                <small id="xWarning" class="warning">Please enter a valid X (Twitter) URL.</small>
            </div>

            <!-- Select Primary Social Media -->
            <div class="form-group">
                <label for="primarySocial">Select Your Primary Social Media</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="primarySocial" id="primaryLinkedIn" value="linkedin" <% if (data && data.primarySocial === "linkedin") { %>checked<% } %> required>
                    <label class="form-check-label" for="primaryLinkedIn">LinkedIn</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="primarySocial" id="primaryX" value="x" <% if (data && data.primarySocial === "x") { %>checked<% } %> required>
                    <label class="form-check-label" for="primaryX">X (Twitter)</label>
                </div>
                <small id="primarySocialWarning" class="warning">Please select your primary social media account.</small>
            </div>

            <!-- Profile Heading Line -->
            <div class="form-group">
                <label for="profileHeading">Profile Heading</label>
                <input name="profileHeading" type="text" class="form-control" id="profileHeading" value="<% if (data && data.heading) { %><%= data.heading %><% } %>" placeholder="E.g., Tech Enthusiast & Writer" required maxlength="50" aria-describedby="profileHeadingHelp">
                <small id="profileHeadingHelp" class="form-text text-muted">A short headline about yourself (max 50 characters).</small>
            </div>

            <!-- Profession -->
            <div class="form-group">
                <label for="profession">Profession</label>
                <input name="profession" type="text" class="form-control" id="profession" value="<% if (data && data.profession) { %><%= data.profession %><% } %>" placeholder="E.g., Software Engineer" required maxlength="50" aria-describedby="professionHelp">
                <small id="professionHelp" class="form-text text-muted">Your current profession (max 50 characters).</small>
            </div>

            <!-- Profile Description -->
            <div class="form-group">
                <label for="profileDescription">Profile Description</label>
                <textarea name="profileDescription" class="form-control" id="profileDescription" rows="4" placeholder="Tell us about yourself (min 100 characters)" minlength="100" required aria-describedby="profileDescriptionHelp"><% if (data && data.description) { %><%= data.description %><% } %></textarea>
                <small id="profileDescriptionHelp" class="form-text text-muted">A brief description about yourself (min 100 characters).</small>
                <small id="descriptionWarning" class="warning">Description must be at least 100 characters.</small>
            </div>

            <!-- Topics of Interest -->
            <div class="form-group">
                <label for="interests">Topics You're Interested In Writing About</label>
                <div class="interest-buttons" id="interests">
                    <button type="button" class="interest-btn <% if (data && data.interests && data.interests.includes('Business')) { %>active<% } %>" data-topic="Business">Business</button>
                    <button type="button" class="interest-btn <% if (data && data.interests && data.interests.includes('Tech')) { %>active<% } %>" data-topic="Tech">Tech</button>
                    <button type="button" class="interest-btn <% if (data && data.interests && data.interests.includes('Finance')) { %>active<% } %>" data-topic="Finance">Finance</button>
                    <button type="button" class="interest-btn <% if (data && data.interests && data.interests.includes('Education')) { %>active<% } %>" data-topic="Education">Education</button>
                    <button type="button" class="interest-btn <% if (data && data.interests && data.interests.includes('Psychology')) { %>active<% } %>" data-topic="Psychology">Psychology</button>
                    <button type="button" class="interest-btn <% if (data && data.interests && data.interests.includes('Design & Art')) { %>active<% } %>" data-topic="Design & Art">Design & Art</button>
                </div>
                <small id="interestsWarning" class="warning">Please select at least one topic.</small>
            </div>

            <!-- Hidden input to store selected interests -->
            <input type="hidden" id="selectedInterests" name="interests" />

            <!-- Submit Button -->
            <button type="submit" class="btn btn-success">Save Profile</button>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script>
        $(document).ready(function () {
            // Initialize selected interests
            const selectedInterestsInput = $('#selectedInterests');
            const initialSelectedTopics = [];
            $('.interest-btn.active').each(function () {
                const topic = $(this).data('topic');
                initialSelectedTopics.push(topic);
                $(this).addClass('selected');
            });
            selectedInterestsInput.val(initialSelectedTopics.join(','));

            // Handle interest button toggle
            $('.interest-btn').click(function () {
                $(this).toggleClass('active selected');
                const selectedTopics = [];
                $('.interest-btn.active').each(function () {
                    selectedTopics.push($(this).data('topic'));
                });
                selectedInterestsInput.val(selectedTopics.join(','));
            });

            // Preview profile photo and validate square image
            $('#profilePhoto').change(function () {
                const file = this.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function (e) {
                        const img = new Image();
                        img.onload = function () {
                            if (img.width !== img.height) {
                                $('#photoWarning').show();
                                $('#profilePhoto').val('');
                                $('#photoPreview').hide();
                            } else {
                                $('#photoWarning').hide();
                                $('#photoPreview').attr('src', e.target.result).show();
                            }
                        };
                        img.src = e.target.result;
                    };
                    reader.readAsDataURL(file);
                }
            });

            // Show photo preview if preloaded
            if ($('#photoPreview').attr('src') !== '#') {
                $('#photoPreview').show();
            }

            // Form submission validation
            $('#profileForm').submit(function (event) {
                event.preventDefault();
                let isValid = true;

                // Validate Profile Description
                const profileDescription = $('#profileDescription').val();
                if (profileDescription.length < 100) {
                    $('#descriptionWarning').show();
                    isValid = false;
                } else {
                    $('#descriptionWarning').hide();
                }

                // Validate LinkedIn and X URLs
                const validateURL = (url, warningId, platform) => {
                    const regex = platform === 'linkedin' 
                        ? /^(https?:\/\/)?([a-zA-Z0-9-]+\.)*linkedin\.com\/(in|pub|profile)\/[a-zA-Z0-9-_]+\/?$/
                        : /^(https?:\/\/)?([a-zA-Z0-9-]+\.)*(twitter|x)\.com\/[a-zA-Z0-9_]+\/?$/;
                    if (!url || !regex.test(url)) {
                        $(`#${warningId}`).show();
                        return false;
                    } else {
                        $(`#${warningId}`).hide();
                        return true;
                    }
                };

                const linkedin = $('#linkedin').val();
                const xProfile = $('#xProfile').val();
                const isLinkedInValid = validateURL(linkedin, 'linkedinWarning', 'linkedin');
                const isXValid = validateURL(xProfile, 'xWarning', 'x');
                if (!isLinkedInValid || !isXValid) {
                    isValid = false;
                }

                // Validate Primary Social Media
                const primarySocial = $('input[name="primarySocial"]:checked').val();
                if (!primarySocial) {
                    $('#primarySocialWarning').show();
                    isValid = false;
                } else {
                    $('#primarySocialWarning').hide();
                }

                // Validate Interests
                const selectedTopics = selectedInterestsInput.val().split(',').filter(Boolean);
                if (selectedTopics.length === 0) {
                    $('#interestsWarning').show();
                    isValid = false;
                } else {
                    $('#interestsWarning').hide();
                }

                // If all validations pass, submit the form
                if (isValid) {
                    const formData = new FormData(this);
                    fetch('/profile-creation', {
                        method: 'POST',
                        body: formData
                    })
                    .then(response => {
                        if (response.ok) {
                            alert('Profile saved successfully!');
                            window.location.href = '/profile/' + $('#username').val();
                        } else {
                            throw new Error('Failed to save profile');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('Failed to save profile. Please try again.');
                    });
                }
            });
        });
    </script>
</body>
</html>
